<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="sport.properties"/>

	<bean id="fortuneService"
		class="ioc.fortuneservices.HappyFortuneService"/>

	<bean id="randFortuneService"
		  class="ioc.fortuneservices.RandomFortuneService"/>

	<bean id="tCoach"
		class="ioc.coaches.TrackCoach">
		<constructor-arg ref="fortuneService"/>
	</bean>

	<bean id="cCoach"
		  class="ioc.coaches.CricketCoach">
		<property name="fortuneService" ref="randFortuneService"/>
		<property name="emailAddress" value="${sport.email}"/>
		<property name="team" value="${sport.team}"/>
	</bean>
</beans>





